# NekoTab Infrastructure Environment
# Copy to .env and fill in your values

# =============================================================================
# Domain & SSL
# =============================================================================
DOMAIN=nekotab.app
ACME_EMAIL=admin@nekotab.app
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=changeme

# =============================================================================
# Control Plane
# =============================================================================
CONTROL_PLANE_SECRET=generate-a-secure-64-char-secret-here
CONTROL_PLANE_API_KEY=generate-api-key-for-provisioning

# =============================================================================
# PostgreSQL (Shared instance for metadata + per-tenant DBs)
# =============================================================================
POSTGRES_HOST=postgres-master
POSTGRES_PORT=5432
POSTGRES_ADMIN_USER=nekotab_admin
POSTGRES_ADMIN_PASSWORD=generate-secure-password

# =============================================================================
# Redis (Shared for sessions and channels)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=generate-redis-password

# =============================================================================
# Default Tenant Resources
# =============================================================================
TENANT_CPU_LIMIT=1.0
TENANT_MEMORY_LIMIT=512M
TENANT_CPU_RESERVATION=0.25
TENANT_MEMORY_RESERVATION=256M

# =============================================================================
# Backup & Storage
# =============================================================================
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=nekotab-backups
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1

# =============================================================================
# Monitoring
# =============================================================================
GRAFANA_ADMIN_PASSWORD=changeme
SENTRY_DSN=

# =============================================================================
# Docker Registry (for custom images)
# =============================================================================
REGISTRY_URL=ghcr.io/abusumon
IMAGE_TAG=latest
